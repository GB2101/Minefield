{
	"name": "functions",
	"scripts": {
		"build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
		"server": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/server.ts",
		"delete": "rm -rf dist",
		"test": "vitest run --log-heap-usage",
		"tester": "vitest watch --log-heap-usage",
		"coverage": "vitest run --coverage",
		"uncover": "rm -rf coverage",
		"verify": "tsc --noEmit"
	},
	"engines": {
		"node": "16"
	},
	"main": "lib/index.js",
	"dependencies": {
		"express": "^4.18.2",
		"firebase-admin": "^11.5.0",
		"firebase-functions": "^4.2.0",
		"zod": "^3.21.4",
		"zod-validation-error": "^1.3.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.21.5",
		"@babel/core": "^7.21.8",
		"@babel/node": "^7.20.7",
		"@babel/preset-env": "^7.21.5",
		"@babel/preset-typescript": "^7.21.5",
		"@types/express": "^4.17.17",
		"@typescript-eslint/eslint-plugin": "^5.59.5",
		"@typescript-eslint/parser": "^5.59.5",
		"@vitest/coverage-c8": "^0.31.0",
		"@vitest/ui": "^0.31.1",
		"babel-plugin-module-resolver": "^5.0.0",
		"eslint": "^8.40.0",
		"firebase-functions-test": "^3.0.0",
		"supertest": "^6.3.3",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^4.9.0",
		"vitest": "^0.31.0",
		"vitest-tsconfig-paths": "^3.4.1"
	},
	"private": true
}
